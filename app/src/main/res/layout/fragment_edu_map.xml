<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment"
    android:orientation="vertical">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/schools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:contentDescription="TODO"
                android:src="@drawable/baseline_school_24"
                app:backgroundTint="@color/blue"
                app:srcCompat="@drawable/baseline_add_24"
                app:tint="@color/white" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/libraries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:contentDescription="TODO"
                android:src="@drawable/baseline_local_library_24"
                app:backgroundTint="@color/blue"
                app:srcCompat="@drawable/baseline_add_24"
                app:tint="@color/white" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/restaurants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:contentDescription="TODO"
                android:src="@drawable/baseline_restaurant_24"
                app:backgroundTint="@color/blue"
                app:srcCompat="@drawable/baseline_add_24"
                app:tint="@color/white" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/bookstores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:contentDescription="TODO"
                android:src="@drawable/baseline_book_24"
                app:backgroundTint="@color/blue"
                app:srcCompat="@drawable/baseline_add_24"
                app:tint="@color/white"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/close"
                android:layout_width="78dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:contentDescription="TODO"
                android:src="@drawable/baseline_close_24"
                app:backgroundTint="@color/white"
                app:srcCompat="@drawable/baseline_add_24"
                app:tint="@color/blue"
                android:visibility="gone"/>

        </LinearLayout>

    </fragment>




</LinearLayout>
